@model GestaoComercial.website.Models.Cliente

@{
    ViewBag.Title = "Create";
}

<h2>Cadastrar Cliente</h2>
<br />

    <form class="form-horizontal">
        <div class="form-group">
            <label for="nomeCompleto" class="col-sm-2 control-label">Nome Completo<br/>Razão Social</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="nomeCompleto" placeholder="Nome Completo Razão Social">
            </div>
        </div>
        <div class="form-group">
            <label for="apelido" class="col-sm-2 control-label">Apelido<br/>Nome Fantasia</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="apelido" placeholder="Apelido / Nome Fantasia">
            </div>
        </div>
        <div class="form-group">
            <label for="cpfcnpj" class="col-sm-2 control-label">CPF<br/>CNPJ</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="cpfcnpj" placeholder="Digite CPF ou CNPJ">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
             
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Salvar</button>
            </div>
        </div>
    </form>

